<section>
    <div class="container mt-4">

        <div class="class col-md-4">
            <div class="row">

                <h2 class="text-center">Add Product</h2>
                <form action="/admin/add-product" method="POST" enctype="multipart/form-data">

                    <label for="">Name</label>
                    <input type="text" name="Name" class="form-control" placeholder="Enter Name of The Product">

                    <label for="">Category</label>
                    <input type="text" name="Category" class="form-control" placeholder="Enter Category of The Product">

                    <label for="">Price</label>
                    <input type="text" name="Price" class="form-control" placeholder="Enter Price Of The product">

                    <label for="">Description</label>
                    <input type="text" name="Description" class="form-control" placeholder="Enter Description of The Product">

                    <label for="">Image</label>
                    <input type="file" name="Image" class="form-control">

                    <button class="btn btn-success mt-3">Submit</button>

                </form>
            </div>
        </div>
    </div>
</section>