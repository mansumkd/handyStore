<section>
  <div class="container">
    <div class="row mt-2">
      <a href="admin/add-product" class="btn btn-success ml-auto">Add Item</a>
    </div>
    <div class="mt-3">

      <table class="table" id="productTable" border="1">
        <thead>
          <tr>
            <th>No</th>
            <th scope="col">Name</th>
            <th scope="col">Category</th>
            <th scope="col">Price</th>
            <th scope="col">Description</th>
            <th scope="col">Image</th>
            <th scope="col"></th>

          </tr>
        </thead>
        <tbody>
          {{#each products}}
          <tr>
            <td>.</td>
            <td>{{this.Name}}</td>
            <td>{{this.Category}}</td>
            <td>{{this.Price}}</td>
            <td>{{this.Description}}</td>
            <td><img style="height:50px;width:50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
            <td>

              <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
              <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
                onclick="return confirm('Are you sure to want to delete {{this.Name}}?')">Delete</a>
            </td>

          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
</section>
<style>
  #productTable {
    margin-top: 5px;
  }
</style>


<script>

  $(function () {
    $('#productTable').DataTable();
  });
  
</script>


<style>
  tbody {
    counter-reset: rowNumber;
  }

  table tr {

    counter-increment: rowNumber;

  }

  tbody tr td:first-child::before {
    content: counter(rowNumber);

  }
</style>